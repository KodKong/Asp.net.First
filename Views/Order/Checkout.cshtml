@model Order
<div class="row">
    <h3>Оформление заказа</h3>
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="NameBuyer"></label>
            <div class="col-md-5">
                <input asp-for="NameBuyer" class="form-control" />
                <span asp-validation-for="NameBuyer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SurnameBuyer"></label>
            <div class="col-md-5">
                <input asp-for="SurnameBuyer" class="form-control" />
                <span asp-validation-for="SurnameBuyer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AdressBuyer"></label>
            <div class="col-md-5">
                <input asp-for="AdressBuyer" class="form-control" />
                <span asp-validation-for="AdressBuyer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneBuyer"></label>
            <div class="col-md-5">
                <input asp-for="PhoneBuyer" class="form-control" />
                <span asp-validation-for="PhoneBuyer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailBuyer"></label>
            <div class="col-md-5">
                <input asp-for="EmailBuyer" class="form-control" />
                <span asp-validation-for="EmailBuyer" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Завершить заказ"/>
    </form>
</div>
